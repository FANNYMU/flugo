# Flugo Framework Configuration
# Copy this file to .env and modify values as needed

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_ALLOWED_ORIGINS=*
SERVER_MAX_REQUEST_SIZE=10485760
SERVER_ENABLE_SWAGGER=true
SERVER_ENABLE_METRICS=true
SERVER_ENABLE_PROFILING=false

# Database Configuration
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=flugo
DB_SSL_MODE=disable
DB_MAX_IDLE=10
DB_MAX_OPEN=100

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=flugo-super-secret-key-change-this-in-production
JWT_EXPIRATION_TIME=3600
JWT_REFRESH_TIME=86400

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads
UPLOAD_ENABLE_RESIZE=true
UPLOAD_THUMBNAIL_SIZE=200

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=console
LOG_OUTPUT_FILE=
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28

# Optional: Load config from file
# CONFIG_FILE=config.json